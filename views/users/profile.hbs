<div class="container">
    <div class="img-name">
        <img src="{{currentUser.image}}" class="profile-img">
        <h1>{{currentUser.name}}</h1>
    </div>

    <div class="container">
        <div class="row mx-auto">
            <h2>Products you've liked:</h2>
            {{#each likes as |like|}}
            <div class="col-xl-3 col-sm-6 col-xs-12 gy-4 d-flex align-items-stretch">
                <div class="card w-100 " style="width: 18rem;">
                    <div class="position-relative">
                        <img src="{{product.main_image}}" class="card-img-top" alt="...">
                        <button class="like-button border-0">
                            <i data-id="{{product.id}}"
                                class="
                                      like-action fa fa-heart
                                      {{#userLikedProducts likes=../likes product=product}} icon-liked{{/userLikedProducts}} ">
                            </i>
                        </button>
                    </div>
                    <div class="card-body d-flex flex-column mt-2 justify-content-between">
                        <div>
                            <h6 class="card-title py-1">{{product.title}}</h6>
                            <small class="card-text text-muted text-small">{{product.fashion_product_type}}</small>
                            <h5 class="card-title mb-4 mt-2">{{product.RSVP}} â‚¬</h5>
                        </div>
                        <a href="/products/detail/{{product._id}}" class="btn btn btn-outline-primary">Detalle</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>