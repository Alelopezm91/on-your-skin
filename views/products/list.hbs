<div class="container">
    <div class="row mx-auto">
        {{#each products as |product|}}
        <div class="col-xl-3 col-sm-6 col-xs-12 gy-4 d-flex align-items-stretch">
            <div class="card w-100 " style="width: 18rem;">
                <div class="position-relative">
                    <img src="{{product.main_image}}" class="card-img-top" alt="...">
                </div>
                <div class="card-body d-flex flex-column mt-2">
                    <h6 class="card-title">{{product.title}}</h6>
                    <small class="card-text text-small mb-3">{{product.fashion_product_type}}</small>
                    <a href="#" class="btn btn btn-outline-primary">Detalle</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>