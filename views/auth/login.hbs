<div class="row justify-content-center my-5">
  <div class="col col-sm-8 col-md-6 col-lg-4">
    <div class="intro-register-img mb-4">
      <img class="w-100" src="img/logo.png" alt="intro" >
    </div>
    </div>
</div>
<div class="mt-4 row justify-content-center">
  <div class="col-4">
    <h2 class="text-center">Login</h2>
    <form autocomplete="off" class="mt-4" method="POST" action="/login">
      <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input
          value="{{user.email}}"
          name="email"
          type="email"
          class="form-control {{#if errors.email}}is-invalid{{/if}}"
          placeholder="Enter name"
        >
        {{#if errors.email}}
          <small class="invalid-feedback">
            {{errors.email}}
          </small>
        {{/if}}
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input
          name="password"
          type="password"
          class="form-control {{#if errors.password}}is-invalid{{/if}}"
          placeholder="Password"
        >
         {{#if errors.password}}
          <small class="invalid-feedback">
            {{errors.password}}
          </small>
        {{/if}}
      </div>
      <button type="submit" class="btn btn-primary">Login with email</button>
    </form>
  <div>
        <a href="/login/google" class="btn btn-danger border-0">
          <i class="fa fa-google"> Login with Google</i>
        </a>
      </div>
      </div>



